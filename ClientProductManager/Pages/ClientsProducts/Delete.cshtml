@page "{clientId:int}/{productId:int}"
@model ClientProductManager.Pages.ClientsProducts.DeleteModel

<div class="card rounded-5 my-4 border-0 shadow">
    <div class="card-header rounded-top-5 bg-danger bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Client Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="ClientProduct.ClientId" hidden />
            <input asp-for="ClientProduct.ProductId" hidden />

            <div class="row">
                <div class="col-12">
                    <div class="p-3 border">
                        <h5 class="text-danger">Are you sure you want to delete this Client Product?</h5>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="ClientProduct.Client.Name" class="form-control border-0 shadow" readonly />
                            <label asp-for="ClientProduct.Client.Name" class="ms-2"></label>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="ClientProduct.Product.Name" class="form-control border-0 shadow" readonly />
                            <label asp-for="ClientProduct.Product.Name" class="ms-2"></label>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="ClientProduct.StartDate" class="form-control border-0 shadow" readonly />
                            <label asp-for="ClientProduct.StartDate" class="ms-2"></label>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="ClientProduct.EndDate" class="form-control border-0 shadow" readonly />
                            <label asp-for="ClientProduct.EndDate" class="ms-2"></label>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="ClientProduct.License" class="form-control border-0 shadow" readonly />
                            <label asp-for="ClientProduct.License" class="ms-2"></label>
                        </div>
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-danger rounded-4 form-control">Delete</button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-page="Index" class="btn btn-outline-danger rounded-4 form-control border">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
