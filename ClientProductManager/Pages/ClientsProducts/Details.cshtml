@page
@model ClientProductManager.Pages.ClientsProducts.DetailsModel
<div class="card rounded-4 mt-4 mb-1 border-0 shadow">
    <div class="card-header rounded-top-5 bg-primary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white fw-bold py-2">Client Products Details</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row">
            <div class="col-12">
                <div class="p-3 border">
                    <h4>Product Information</h4>
                    <div class="row mb-2">
                        <div class="col-sm-4">
                            <strong>Product Name:</strong>
                        </div>
                        <div class="col-sm-8">
                            <span>@Model.ClientProductVM.ProductName</span>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-sm-4">
                            <strong>Product Description:</strong>
                        </div>
                        <div class="col-sm-8">
                            <span>@Model.ClientProductVM.ProductDescription</span>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-sm-4">
                            <strong>License:</strong>
                        </div>
                        <div class="col-sm-8">
                            <span>@Model.ClientProductVM.License</span>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-sm-4">
                            <strong>Start Date:</strong>
                        </div>
                        <div class="col-sm-8">
                            <span>@Model.ClientProductVM.StartDate.ToString("yyyy-MM-dd")</span>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-sm-4">
                            <strong>End Date:</strong>
                        </div>
                        <div class="col-sm-8">
                            <span>@Model.ClientProductVM.EndDate?.ToString("yyyy-MM-dd")</span>
                        </div>
                    </div>

                    <h4 class="mt-4">Client Information</h4>
                    <div class="row mb-2">
                        <div class="col-sm-4">
                            <strong>Client Name:</strong>
                        </div>
                        <div class="col-sm-8">
                            <span>@Model.ClientProductVM.ClientName</span>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-sm-4">
                            <strong>Client State:</strong>
                        </div>
                        <div class="col-sm-8">
                            <span>@Model.ClientProductVM.ClientState</span>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-sm-4">
                            <strong>Client Class:</strong>
                        </div>
                        <div class="col-sm-8">
                            <span>@Model.ClientProductVM.ClientClass</span>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-sm-4">
                            <strong>Client Code:</strong>
                        </div>
                        <div class="col-sm-8">
                            <span>@Model.ClientProductVM.ClientCode</span>
                        </div>
                    </div>

                    <div class="row pt-4">
                        <div class="col-12">
                            <a asp-page="Index" class="btn btn-outline-primary rounded-4 form-control">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
