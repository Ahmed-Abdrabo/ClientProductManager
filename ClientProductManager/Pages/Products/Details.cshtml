@page
@model ClientProductManager.Pages.Products.DetailsModel

 <div class="card rounded-4 mt-4 mb-1 border-0 shadow">
    <div class="card-header rounded-top-5 bg-primary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white fw-bold py-2">Products Details</h2>
            </div>
        </div>
    </div>
       
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-12 col-lg-6 offset-lg-1">
                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <strong>Product Name:</strong>
                            </div>
                            <div class="col-sm-8">
                                <span>@Model.ProductVM.Name</span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <strong>Description:</strong>
                            </div>
                            <div class="col-sm-8">
                                <span>@Html.Raw(Model.ProductVM.Description)</span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <strong>Is Active:</strong>
                            </div>
                            <div class="col-sm-8">
                                <span class="text-dark fw-bold">@((Model.ProductVM.IsActive ? "Yes" : "No"))</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row pt-4">
                <div class="col-12">
                    <a asp-page="Index" class="btn btn-outline-primary rounded-4 form-control">Back to List</a>
                </div>
            </div>
            </div>
        </div>
 </div>
