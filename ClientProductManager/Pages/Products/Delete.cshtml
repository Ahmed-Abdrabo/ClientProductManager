@page
@model ClientProductManager.Pages.Products.DeleteModel
<div class="card rounded-5 my-4 border-0 shadow">
    <div class="card-header rounded-top-5 bg-danger bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="Product.Id" hidden />
            <div class="row">
                <div class="col-12">
                    <div class="p-3 border">
                        <h5 class="text-danger">Are you sure you want to delete this product?</h5>
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger rounded-3">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <p>@error.ErrorMessage</p>
                                }
                            </div>
                        }


                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Name" class="form-control border-0 shadow" readonly />
                            <label asp-for="Product.Name" class="ms-2"></label>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <textarea asp-for="Product.Description" class="form-control border-0 shadow" rows="3" readonly></textarea>
                            <label asp-for="Product.Description" class="ms-2 text-muted"></label>
                        </div>

                        <div class="form-check py-2 col-12">
                            <label asp-for="Product.IsActive" class="form-check-label ms-2">Is Active</label>
                            <input asp-for="Product.IsActive" class="form-check-input" type="checkbox" readonly />
                        </div>

                     
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-danger rounded-4 form-control">Delete</button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-page="Index" class="btn btn-outline-danger rounded-4 form-control border">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
